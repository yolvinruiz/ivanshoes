                                        <Setter Property="Opacity" TargetName="border" Value="0.8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
            <Border Background="White"
        Width="300"
        Height="200"
        Margin="10"
        CornerRadius="8"
        BorderThickness="1"
        BorderBrush="#EEEEEE">
                <StackPanel Margin="20">
                    <Path Data="M20 3H4a1 1 0 00-1 1v16a1 1 0 001 1h16a1 1 0 001-1V4a1 1 0 00-1-1z"
                            Width="40"
                            Height="40"
                            Stretch="Uniform"
                            Margin="0,0,0,10">
                        <Path.Fill>
                            <ImageBrush ImageSource="/imagen.png"/>
                        </Path.Fill>
                    </Path>
                    <TextBlock Text="Fondo de Pantalla"
                  FontSize="18"
                  FontWeight="SemiBold"
                  Margin="0,0,0,10"/>
                    <TextBlock Text="Personaliza el fondo de pantalla del sistema."
                  TextWrapping="Wrap"
                  Foreground="#666666"
                  Margin="0,0,0,15"/>
                    <Button Content="Configurar Fondo"
                Height="27"
                Background="Black"
                Foreground="White"
                Click="ConfigurarFondo_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="border"
Background="{TemplateBinding Background}"
BorderBrush="{TemplateBinding BorderBrush}"
BorderThickness="1"
CornerRadius="10">
                                    <ContentPresenter x:Name="contentPresenter"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!-- Animación y color al presionar -->
