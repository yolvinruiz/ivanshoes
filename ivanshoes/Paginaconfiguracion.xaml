                                        <Setter Property="Opacity" TargetName="border" Value="0.8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </WrapPanel>
    </Grid>
</Page>
