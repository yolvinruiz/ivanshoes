                    </Path>
                    <TextBlock Text="Empleados"
                             FontSize="18"
                             FontWeight="SemiBold"
                             Margin="0,0,0,10"/>
                    <TextBlock Text="Gestione la información de los empleados del sistema."
                             TextWrapping="Wrap"
                             Foreground="#666666"
                             Margin="0,0,0,15"/>
                    <Button Content="Ir a Empleados"
