<Page x:Class="ivanshoes.Paginaventa"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:local="clr-namespace:ivanshoes"
      mc:Ignorable="d" 
      d:DesignHeight="900"
      Title="Paginaventa" Width="1200">

    <Grid>
        <TextBox x:Name="txtdnicliente" HorizontalAlignment="Left" Margin="15,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Dni cliente" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFF57F17"/>
        <Label Content="Dni empleado" HorizontalAlignment="Left" Margin="15,112,0,0" VerticalAlignment="Top" Foreground="#FFF57F17"/>
        <TextBox x:Name="txtdniempleado" HorizontalAlignment="Left" Margin="15,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnverificarcliente" Content="Verficar" HorizontalAlignment="Left" Margin="145,84,0,0" VerticalAlignment="Top" Width="60" Background="#FFFFEB3B" Click="Button_Click" Foreground="#FFF57F17">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                 BorderBrush="{TemplateBinding BorderBrush}"
                 BorderThickness="1"
                 CornerRadius="5">
                        <!-- Cambia este valor para ajustar el radio -->
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="dgvgenerarorden" Content="generar orden de venta" HorizontalAlignment="Left" Margin="70,167,0,0" VerticalAlignment="Top" Width="135" Height="20" Foreground="#FFF57F17" Background="#FFFDD835" Click="dgvgenerarorden_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                 BorderBrush="{TemplateBinding BorderBrush}"
                 BorderThickness="1"
                 CornerRadius="5">
                        <!-- Cambia este valor para ajustar el radio -->
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Border BorderBrush="#FFFFAF00" BorderThickness="1" HorizontalAlignment="Left" Height="186" Margin="225,69,0,0" VerticalAlignment="Top" Width="940"/>
        <Button x:Name="btnbuscarproducto" Content="Buscar" HorizontalAlignment="Left" Margin="470,84,0,0" VerticalAlignment="Top" Height="20" Width="85" Background="#FFFDD835" Foreground="#FFF57F17">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                 BorderBrush="{TemplateBinding BorderBrush}"
                 BorderThickness="1"
                 CornerRadius="5">
                        <!-- Cambia este valor para ajustar el radio -->
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <DataGrid x:Name="dgvproducto" HorizontalAlignment="Left" Height="130" Margin="235,113,0,0" VerticalAlignment="Top" Width="915" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="dgvproducto_SelectionChanged"/>
        <TextBox x:Name="txtbuscar" HorizontalAlignment="Left" Height="20" Margin="235,85,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="btnmostrarproducto" Content="Mostrar" HorizontalAlignment="Left" Height="21" Margin="630,82,0,0" VerticalAlignment="Top" Width="75" Background="#FFFDD835" Click="btnmostrarproducto_Click" Foreground="#FFF57F17">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                 BorderBrush="{TemplateBinding BorderBrush}"
                 BorderThickness="1"
                 CornerRadius="5">
                        <!-- Cambia este valor para ajustar el radio -->
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Border BorderBrush="Yellow" BorderThickness="1" HorizontalAlignment="Left" Height="58" Margin="235,260,0,0" VerticalAlignment="Top" Width="457">
            <Border.Background>
                <SolidColorBrush Color="Yellow" Opacity="0.85"/>
            </Border.Background>
            <TextBox x:Name="txtsubtotal" HorizontalAlignment="Left" Height="42" Margin="333,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="66" FontWeight="Bold"/>
        </Border>
        <TextBlock x:Name="txtnompro" HorizontalAlignment="Left" Margin="270,286,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Black" Width="48" Text="z" FontWeight="Bold" />

        <TextBlock x:Name="txtprecpro" HorizontalAlignment="Left" Margin="376,286,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Black" Width="50" Text="z" FontWeight="Bold"/>
        <xctk:IntegerUpDown Name="numericUpDown"
                            Minimum="0"
                            Maximum="100"
                            Value="1"
                            Width="50"
                            Height="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Foreground="Black"
                            Background="#FFFDE7" BorderBrush="#FF9A0000" Margin="468,286,0,0" FontWeight="Bold" ValueChanged="numericUpDown_ValueChanged">
            <xctk:IntegerUpDown.Resources>
                <Style TargetType="RepeatButton">
                    <Setter Property="Background" Value="Blue"/>
                    <Setter Property="BorderBrush" Value="Aquamarine"/>
                    <Setter Property="Foreground" Value="AliceBlue"/>
                </Style>
            </xctk:IntegerUpDown.Resources>
        </xctk:IntegerUpDown>
        <Label Content="Nombre" HorizontalAlignment="Left" Height="25" Margin="246,260,0,0" VerticalAlignment="Top" Width="52" Background="Transparent" Foreground="#FFF57F17" FontWeight="Bold"/>
        <Label Content="Precio" HorizontalAlignment="Left" Height="23" Margin="356,260,0,0" VerticalAlignment="Top" Width="72" Foreground="#FFF57F17" FontWeight="Bold"/>
        <Label Content="Cantidad" HorizontalAlignment="Left" Height="25" Margin="464,260,0,0" VerticalAlignment="Top" Width="98" Foreground="#FFF57F17" FontWeight="Bold"/>
        <Button x:Name="btnagregarproducto" Content="Agregar a carrito" HorizontalAlignment="Left" Height="24" Margin="719,278,0,0" VerticalAlignment="Top" Width="95" Foreground="#FFF57F17" Background="#FFFDD835">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                 BorderBrush="{TemplateBinding BorderBrush}"
                 BorderThickness="1"
                 CornerRadius="5">
                        <!-- Cambia este valor para ajustar el radio -->
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="btncancelarventa" Content="Cancelar venta" HorizontalAlignment="Left" Margin="828,278,0,0" VerticalAlignment="Top" Background="#FFFDD835" Foreground="#FFF57F17" Width="95" Height="24">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
         BorderBrush="{TemplateBinding BorderBrush}"
         BorderThickness="1"
         CornerRadius="5">
                        <!-- Cambia este valor para ajustar el radio -->
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <GroupBox x:Name="grupbox" HorizontalAlignment="Left" Height="525" Header="Detalle de venta" Margin="225,334,0,0" VerticalAlignment="Top" Width="940" Foreground="#FFF57F17" BorderBrush="#FFFF5200"/>
        <DataGrid HorizontalAlignment="Left" Height="368" Margin="246,467,0,0" VerticalAlignment="Top" Width="650" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button x:Name="btncancelarventa1" Content="Cancelar venta" HorizontalAlignment="Left" Margin="921,572,0,0" VerticalAlignment="Top" Width="88" Height="24" Background="#FFFDD835" Foreground="#FFF57F17">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Background="{TemplateBinding Background}"
 BorderBrush="{TemplateBinding BorderBrush}"
 BorderThickness="1"
 CornerRadius="5">
                    <!-- Cambia este valor para ajustar el radio -->
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Button.Template>
        </Button>
        <Button x:Name="btnpagar" Content="Realizar pago" HorizontalAlignment="Left" Margin="921,622,0,0" VerticalAlignment="Top" Width="88" Background="#FFFDD835" Foreground="#FFF57F17" Height="29">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Background="{TemplateBinding Background}"
 BorderBrush="{TemplateBinding BorderBrush}"
 BorderThickness="1"
 CornerRadius="5">
                    <!-- Cambia este valor para ajustar el radio -->
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Button.Template>
        </Button>
        <Button Content="Button" HorizontalAlignment="Left" Margin="1028,572,0,0" VerticalAlignment="Top" Background="#FFFDD835" Foreground="#FFF57F17" Height="24" Width="69">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
 BorderBrush="{TemplateBinding BorderBrush}"
 BorderThickness="1"
 CornerRadius="5">
                        <!-- Cambia este valor para ajustar el radio -->
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Button" HorizontalAlignment="Left" Margin="1028,622,0,0" VerticalAlignment="Top" Background="#FFFDD835" Foreground="#FFF57F17" Width="69" Height="29">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
 BorderBrush="{TemplateBinding BorderBrush}"
 BorderThickness="1"
 CornerRadius="5">
                        <!-- Cambia este valor para ajustar el radio -->
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Page>
